{
  "name": "adorable-radios",
  "version": "1.0.0",
  "description": "Your terminal audio companion for streaming internet radio",
  "main": "dist/cli.js",
  "bin": {
    "adorable-radios": "./dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx src/cli.tsx",
    "dev:watch": "tsx watch src/cli.tsx",
    "build": "tsc",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check . && eslint src",
    "lint:fix": "biome check --write . && eslint --fix src",
    "format": "biome format --write ."
  },
  "keywords": [
    "radio",
    "streaming",
    "cli",
    "terminal",
    "music"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-query": "^5.90.11",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
